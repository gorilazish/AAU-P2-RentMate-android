<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  android:id="@+id/fragment_claim_detail"
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">

  <ImageView
    android:layout_width="match_parent"
    android:layout_height="210dp"
    android:background="#e2e2e2"
    android:src="@drawable/ic_missing_photo"
    />

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="5"
    android:orientation="horizontal"
    android:padding="8dp">

    <LinearLayout
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="3"
      android:gravity="center"
      android:orientation="vertical">

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:text="@string/claim_detail_title"
          android:textSize="18sp"
          android:textStyle="bold"
          android:id="@+id/claim_title_textview"/>

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:text="@string/claim_detail_date"
          android:textSize="14sp"
          android:id="@+id/claim_date_textview"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">


      <Button
          android:id="@+id/state_claim_button"
          android:background="@drawable/state_button"
          android:layout_width="65dp"
          android:layout_height="25dp"
          android:layout_gravity="center"
          android:text="@string/state_of_claim_button_name"
          android:textColor="@color/colorWhite"
          android:textSize="12sp"/>
    </LinearLayout>


  </LinearLayout>


  <View
    style="@style/Divider"/>


  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="3"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:drawableLeft="@drawable/description"
      android:drawablePadding="4dp"
      android:text="@string/claim_detail_description"
      android:textSize="16sp"
      android:textStyle="bold"/>

    <TextView
      android:layout_marginTop="5dp"
      android:id="@+id/claim_detail_description"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:textSize="14sp"
      />


  </LinearLayout>


</LinearLayout>